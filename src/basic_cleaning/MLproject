name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: The input artifact
        type: string

      output_artifact:
        description: The name for the cleaned data
        type: string

      output_type:
        description: The type of the cleaned data
        type: string

      output_description:
        description: Description of the preprocessed data
        type: string

      min_price:
        description:  Minimun price to be considered
        type: float

      max_price:
        description: Maximum price to be considered
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact} \
                          --output_artifact {output_artifact} \
                          --output_type {output_type} \
                          --output_description {output_description} \
                          --min_price {min_price} \
                          --max_price {max_price}
